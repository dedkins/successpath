<div style="width:240px;height:250px;padding:10px;box-shadow:1px 5px 5px #888888;background:#e9e9e9">

<div style="width:250px;background:gray;color:white;margin:-10px 5px 10px -10px;font-weight:bold;text-align:center;padding:5px">A Member? Log-In Here</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="signin">Email</div>
<div class="input"><%= f.email_field :email, :autofocus => true, :placeholder => "Email", :style => "padding-left:5px;line-height:200%;width:220px;font-size:.9em" %></div>
<div class="signin">Password</div>
<div class="input"><%= f.password_field :password, :placeholder => "Password", :style => "padding-left:5px;line-height:200%;width:220px;font-size:.9em" %></div>
<div class="signin"><%= f.submit "Sign in", :class => "button" %><br/>
<%= link_to "Become a Member", new_registration_path(resource_name), style:"font-size:.8em" %></div>


<% end %>

</div>