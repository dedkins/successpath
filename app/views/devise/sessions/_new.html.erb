<div style="width:240px;height:250px;padding:10px;box-shadow:1px 5px 5px #888888">

<div style="width:250px;background:gray;color:white;margin:-5px 5px 10px -10px;font-weight:bold;text-align:center;padding:5px">A Member? Log-In Here</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="signin">Email</div>
<div class="signin"><%= f.email_field :email, :autofocus => true %></div>
<div class="signin">Password</div>
<div class="signin"><%= f.password_field :password %></div>
<div class="signin"><%= f.submit "Sign in" %>
	<%= link_to "Become a Member", new_registration_path(resource_name), style:"font-size:.8em" %>
</div>

<% end %>

</div>