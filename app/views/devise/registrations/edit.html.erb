<%= currently_at 'Home' %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="topbanner">
  <%= f.submit 'Save', :class => 'button-link', :style => 'font-size:1.1em' %> Your Changes or <%= link_to 'Go Back', root_path, :class => 'button-link' %>
</div>

<div class="box">
  <div class="flip-container" ontouchstart="this.classList.toggle('hover')">
    <div class="flipper">
      <div class="front" style="background:black">
        <div class="sectiontitle" style="color:white">
          <% if @member.mainlifetitle.present? %>
            <%= @member.mainlifetitle %>
          <% else %>
            Flip Over to Add Your Life Mission Statement
          <% end %>
        </div>
      </div>
      <div class="back">
        <wordbox>
            <name><%= f.text_field :mainlifetitle, :placeholder => "Main Life Title" %></name><br/>
              <description>
                <%= f.text_area :mainlifequote, :size => "30x10", :placeholder => "Add your own powerful personal statement for how you want your life to be.  Be great.  Think big." %>
              </description>
          </wordbox>
      </div>
    </div>
  </div>
</div>
<div class="box">
  <div class="flip-container" ontouchstart="this.classList.toggle('hover')">
    <div class="flipper">
      <div class="front" style="background:orange">
        <div class="sectiontitle" style="color:white">
          <% if @member.desiredassets.present? %>
            <%= @member.desiredassets %>
          <% else %>
            Flip Over and Update with Your Asset Goals
          <% end %>
        </div>
      </div>
      <div class="back">
        <wordbox>
            <name>Add your assets</name><br/>
              <description>
                Desired Assets:<br/>
                <%= f.text_field :desiredassets %>
                <br/>
                Actual Assets:<br/>
                <%= f.text_field :actualassets %>
              </description>
          </wordbox>
      </div>
    </div>
  </div>
</div>
<div class="box">
  <div class="flip-container" ontouchstart="this.classList.toggle('hover')">
    <div class="flipper">
      <div class="front" style="background:#31b7ea">
        <div class="sectiontitle" style="color:white">
          <% if @member.desiredcf.present? %>
            <%= @member.desiredcf %>
          <% else %>
            Flip Over and Update Your Cashflow Goals
          <% end %>
        </div>
      </div>
      <div class="back">
        <wordbox>
            <name>Add your cashflow goals</name><br/>
              <description>
                Desired Monthly Cashflow:<br/>
                <%= f.text_field :desiredcf %>
                <br/>
                Actual Monthly Cashflow:<br/>
                <%= f.text_field :actualcf %>
              </description>
          </wordbox>
      </div>
    </div>
  </div>
</div>
<div class="box">
  <div class="flip-container" ontouchstart="this.classList.toggle('hover')">
    <div class="flipper">
      <div class="front" style="background:black">
        <div class="sectiontitle" style="color:white">
          <% if @member.actiontitle.present? %>
            <%= @member.actiontitle %>
          <% else %>
            Flip Over to Add Your Personal Action Statement
          <% end %>
        </div>
      </div>
      <div class="back">
        <wordbox>
              <description>
                <%= f.text_field :actiontitle, :placeholder => 'Add Your Action Title' %>
                <%= f.text_area :actionquote, :size => "30x10", :placeholder => "Add your powerful personal statement here.  This is about you - put something that will motivate you here" %>
          </wordbox>
      </div>
    </div>
  </div>
</div>
<div class="box">
  <div class="flip-container" ontouchstart="this.classList.toggle('hover')">
    <div class="flipper">
      <div class="front" style="background:black">
        <div class="sectiontitle" style="color:white">
          Change your Email
        </div>
      </div>
      <div class="back">
        <wordbox>
            <name>Change your Email</name><br/>
              <description>
                <div><%= f.label :email %><br />
                <%= f.email_field :email, :autofocus => true %></div>
          </wordbox>
      </div>
    </div>
  </div>
</div>




  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit 'Save', :class => 'button' %></div>
<% end %>

<%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button' %></p>
