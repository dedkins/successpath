  <script type="text/javascript" charset="utf-8">
    $(window).load(function() {
      $('.flexslider').flexslider({
        animation: true,
        animationSpeed: 600,
        directionNav: true,
        touch: true, 
        animation: "slide",
        slideshowSpeed: 3500,
      });
    });
  </script>

</head>
<body>
<div class="container">
  <div class="header">
    <%= render 'layouts/header' %>
  </div>
  <div class="yield">
  	
    <%= yield %>

  </div>
  
</div>
<div class="clearfooter"></div>
<div class="footer">
    <% if member_signed_in? %>
      <%= link_to "Sign Out", destroy_member_session_path, :method => :delete, :class => 'button-link' %> 
    <% else %>
      <%= link_to 'Sign-In!', new_member_session_path, :class => 'button-link' %> <%= link_to "Become a Member", new_member_registration_path, :class => 'button-link' %> <%= link_to 'Help', '#', :class => 'button-link' %> <br/><br/>
    <% end %>
    Copyright 2013 | Edkins Group
  </div>
</body>
</html>
