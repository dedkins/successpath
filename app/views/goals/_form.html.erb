<%= form_for(@goal) do |f| %>
  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% @goal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div style="float:left;width:50%">
  <div class="inputbox" style="background:#e9e9e9;border-radius:5px;border:2px dashed gray;margin-right:10px">
    <% if @goal.image? %>
    <div style="width:250px">
      <%= image_tag(@goal.image) %><br/>
        Current Picture<br/><br/>
          Change your picture: <%= f.text_area :image, size:"60", style:"font-size:.8em" %>
    </div>
    <% else %>
    <div class="field">
      Add a Picture<br/><br/>
      1. Find a picture on the web<br/>
      2. Right click and copy the "url"<br/>
      3. Then paste in the box below:<br/>
      <%= f.text_area :image, size:"40x4", style:"font-size:.8em", :class => 'inputfield' %>
    </div>
    <% end %>
  </div>
</div>
<div style="float:right;width:50%">
  <div class="inputbox">
    <div class="field">
      Name of Goal<br />
      <%= f.text_field :name, :class => 'inputfield' %>
    </div>
    <div class="field">
      Addt'l Comments:<br />
      <%= f.text_area :description, size:"40x4", :class => 'inputfield' %>
    </div>
    <div class="field">
      <%= f.label :goaldate %><br />
      <%= f.text_field :goaldate, :class => 'datepicker' %>
    </div>
    <div class="field">
      <%= f.label :progress %><br />
      <%= f.number_field :progress, :class => 'inputfield' %>
    </div>
    <div class="actions">
      <%= f.submit "Create Goal", :class => 'button-link', :style => 'font-size:1.1em' %> <%= link_to 'Cancel', goals_path, :class => 'description' %>
    </div>
  </div>
</div>

<% end %>
