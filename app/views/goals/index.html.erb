<% currently_at 'Goals'%>

<name>Goals</name>

<%= link_to 'Add New Goal', new_goal_path, :method => 'Get' %>

<div class="container" style="background:black">

	<% @goals.each do |goal| %>
		<div class="box">
			<% if goal.image? %>
				<div class="flip-container" ontouchstart="this.classList.toggle('hover')">
					<div class="flipper">
					  <div class="front">
					    <%= link_to image_tag(goal.image), goal %>
					    <div class="title"><%= number_to_percentage(goal.progress, precision: 0) %> and <%= distance_of_time_in_words(Time.now,goal.goaldate) %> left to achieve</div>
					  </div>
					  <div class="back">
					    <wordbox>
			        		<name><%= goal.name %></name>
			        		<description><%= link_to 'Edit', edit_goal_path(goal) %></description><br/>
			        		<description>
			        			<%= goal.description %><br/>
			        			<%= goal.goaldate %><br/>
			        		</description>
			        	</wordbox>
					  </div>
					</div>
				</div>
	        <% else %>
	        	<wordbox>
	        		<name><%= goal.name %></name>
	        		<description><%= link_to 'Edit', edit_goal_path(goal) %></description><br/>
	        		<description>
	        			<%= goal.description %><br/>
	        			<%= goal.goaldate %><br/>
	        			
	        		</description>
	        	</wordbox>
	        <% end %>
	    </div>
	<% end %>
		
</div>