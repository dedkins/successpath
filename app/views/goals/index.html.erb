<h1>Listing goals</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Description</th>
    <th>Goaldate</th>
    <th>Image</th>
    <th>Url</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td><%= goal.user_id %></td>
    <td><%= goal.name %></td>
    <td><%= goal.description %></td>
    <td><%= goal.goaldate %></td>
    <td><%= goal.image %></td>
    <td><%= goal.url %></td>
    <td><%= goal.priority %></td>
    <td><%= link_to 'Show', goal %></td>
    <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
    <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

