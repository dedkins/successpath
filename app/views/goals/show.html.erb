<%= currently_at 'Goals' %>

<p id="notice"><%= notice %></p>
<div class="topbanner" style="margin:10px 0">
     <%= link_to 'Add New Task', new_task_path(:goal => @goal.id), :method => 'get', :class => 'button-link' %>
  </div>

<div class="showpicturebox" >
  <% if @goal.image? %>
    <%= image_tag(@goal.image) %>
  <% else %>
    <div style="background:#e9e9e9;height:200px;width:100%;padding-top:60px;text-align:center">
      No Image Selected Yet
    </div>
  <% end %> 
</div>

<div class="showtopinfobanner">
  <div style="float:left">
  <name style="font-size:1.75em;font-weight:bold">
    <%= @goal.name %> 
  </name>
    <div>
      <description style="padding-left:10px">
        <%= @goal.description %>
      </description>
    </div>
  </div>
  <div style="float:right">
  <%= link_to 'Edit', edit_goal_path(@goal) %> | <%= link_to 'Back', goals_path %> | <%= link_to 'Achieved!', achieved_goal_path(@goal) %>
    <div style="padding-top:10px;font-size:1.25em">Target: <%= @goal.goaldate.strftime('%m/%d/%Y') %></div>
  </div>
</div>

