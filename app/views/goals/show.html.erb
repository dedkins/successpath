<%= currently_at 'Goals' %>

<p id="notice"><%= notice %></p>

<div class="box">
  <% if @goal.image? %>
    <%= image_tag(@goal.image) %>
  <% else %>
    <div style="background:#e9e9e9;height:200px;width:100%;padding-top:60px;text-align:center">
      No Image Selected Yet
    </div>
  <% end %> 
</div>

<div class="box">
  <%= link_to 'Edit', edit_goal_path(@goal) %> | <%= link_to 'Back', goals_path %><br/>
  <name><%= @goal.name %></name><br/>
  <description style="padding-left:10px">
    <%= @goal.description %><br/><br/>
    Goal Date: <%= @goal.goaldate %>
  </description>
</div>

<div style="clear:both"/>

<div style="height:90px;width:970px;position:relative;margin-left:-10px"/>
      <script type="text/javascript"><!--
      google_ad_client = "ca-pub-5451064655705220";
      /* Large Horizontal - Goal Detail */
      google_ad_slot = "7754657066";
      google_ad_width = 970;
      google_ad_height = 90;
      //-->
      </script>
      <script type="text/javascript"
      src="//pagead2.googlesyndication.com/pagead/show_ads.js">
      </script>
    </div>

<div>

  <div class="topbanner" style="margin-top:10px">
     <%= link_to 'Add New Task', new_task_path(:goal => @goal.id), :method => 'get', :class => 'button-link' %>
  </div>

<%= render 'tasks/opentasktiles' %>

<div style="clear:both">
  <hr/>

<%= render 'tasks/closedtasktiles' %>

</div>



